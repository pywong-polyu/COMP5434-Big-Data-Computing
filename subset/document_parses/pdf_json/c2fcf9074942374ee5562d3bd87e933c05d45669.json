    "metadata": {
        "title": "Gut microbiota modulation: A tailored approach for the prevention of chronic diseases",
        "authors": [
            {
                "first": "Concettina",
                "middle": [],
                "last": "Fenga",
                "suffix": "",
                "affiliation": {
                    "laboratory": "",
