    "metadata": {
        "title": "Exogenous melatonin as potential adjuvant in anti-SarsCov2 vaccines",
        "authors": [
            {
                "first": "Georges",
                "middle": [],
                "last": "Maestroni",
                "suffix": "",
                "affiliation": {
                    "laboratory": "",
